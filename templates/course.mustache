    This template renders the full course.

    Example context (json):
    {
        "sections": [
            {
                "uservisible": 1,
                "num": 1,
                "id": 35,
                "borderwidth": 1,
                "bordercolor": "#FFF",
                "backgroundcolor": "#000",
                "contentcollapsed": false,
                "header": {
                    "name": "Section title",
                    "url": "#"
                },
                "cmlist": {
                    "cms": [
                        {
                            "cmitem": {
                                "cmformat": {
                                    "cmname": "<span class=\"instancename\">Another forum</span>",
                                    "hasname": "true"
                                },
                                "cmid": 35,
                                "anchor": "forum-2",
                                "id": 3,
                                "module": "forum"
                            }
                        }
                    ],
                    "hascms": true
                },
                "iscurrent": true,
                "summary": {
                    "summarytext": "Summary text!"
                }
            },
            {
                "num": 4,
                "uservisible": 1,
                "id": 36,
                "header": {
                    "name": "Section 2 title",
                    "url": "#"
                },
                "cmlist": {
                    "cms": [
                        {
                            "cmitem": {
                                "cmformat": {
                                    "cmname": "<span class=\"instancename\">Forum example</span>",
                                    "hasname": "true"
                                },
                                "anchor": "forum-1",
                                "cmid": 33,
                                "id": 995,
                                "module": "forum"
                            }
                        }
                    ],
                    "hascms": true
                },
                "iscurrent": true,
                "summary": {
                    "summarytext": "Summary text!"
                }
            }
        ],
        "format": "topics",
        "title": "Course title example",
            "hasnavigation": true,
            "sectionnavigation": {
            "hasprevious": true,
            "previousurl": "#",
            "larrow": "&#x25C4;",
            "previousname": "Section 3",
            "hasnext": true,
            "rarrow": "&#x25BA;",
            "nexturl": "#",
            "nextname": "Section 5"
        },
        "borderwidth": 1,
        "bordercolor": "#FFF",
        "backgroundcolor": "#FFF",
        "sectionreturn": 1,
        "displayonesection": 1
    }
}}
<div id="course-format-{{uniqid}}" style="margin: 0; display: contents; position: absolute; flex-shrink: 0">
    <ul class="masonry" style="max-width: 893px;">
        {{#sections}}
            {{#uservisible}}
                <li id="section-{{num}}" class="masonry-brick m-2 p-2 rounded course-section main clearfix"
                    style="position: absolute; border-width: {{borderwidth}}px; border-color: {{bordercolor}}; background-color: {{backgroundcolor}}">
                    <div class="course-section-header">
                        {{#header}}
                            {{$ core_courseformat/local/content/section/header }}
                                {{> core_courseformat/local/content/section/header }}
                            {{/ core_courseformat/local/content/section/header }}
                            {{#controlmenu}}
                                {{$ core_courseformat/local/content/section/controlmenu }}
                                    {{> core_courseformat/local/content/section/controlmenu }}
                                {{/ core_courseformat/local/content/section/controlmenu }}
                            {{/controlmenu}}
                            {{#summary}}
                                {{$ core_courseformat/local/content/section/summary }}
                                    {{> core_courseformat/local/content/section/summary }}
                                {{/ core_courseformat/local/content/section/summary }}
                            {{/summary}}
                            {{#availability}}
                                {{$ core_courseformat/local/content/section/availability }}
                                    {{> core_courseformat/local/content/section/availability }}
                                {{/ core_courseformat/local/content/section/availability }}
                            {{/availability}}
                        {{/header}}
                    </div>
                    <div class="course-content">
                        {{#cmlist}}
                            {{$ core_courseformat/local/content/section/cmlist }}
                                {{> core_courseformat/local/content/section/cmlist }}
                            {{/ core_courseformat/local/content/section/cmlist }}
                        {{/cmlist}}
                        {{{cmcontrols}}}
                    </div>
                </li>
            {{/uservisible}}
        {{/sections}}
    </ul>
</div>
